<h3>Add New Fighter</h3>
<h4>Use this form to add your fighter's profile to the australian fighter database. People all over Australia will have access to this information, which will also be linked to your gym profile.</h4>


<%= error_messages_for "fighter", :header_message => nil, :class => "error" %>



<% form_for :fighter, @fighter, :url => { :action => "submit_new_fighter" }, :html => { :multipart => true } do |g| %>


<fieldset>
<ul class="form">
  <li>    <label class="form_section">Fighter Details</label>  </li>
  <li>
    <%= select_tag "fighter[gender]"," 
    <option value=\"M\">Male</option>
    <option value=\"F\">Female</option>"
    %> Gender *
  </li>
  <li>    <%= g.text_field :first_name, :size => 10 %> Fighter's first name *</li>
  <li>    <%= g.text_field :last_name, :size => 10 %> Fighter's last name *  </li>
  <li>   <%= g.text_field :ring_name, :size => 10 %> Ring Name  </li>
</ul>

<ul class="form">
  <li>    <label class="form_section">Weight Class</label>  </li>
  <li>    <%= g.text_field :min_weight, :size => 5 %> Minimum weight (kgs) *  </li>
  <li>    <%= g.text_field :max_weight, :size => 5 %> Maximum weight (kgs) *  </li>
</ul>
  
<ul class="form">
  
  <li>  <label class="form_section">Discipline *</label>  </li>
  <% @rules.each do |rule| %>
    <li><%= check_box_tag "disciplines[#{rule[:discipline]}]", rule[:id], ((params[:disciplines] and params[:disciplines][rule[:discipline]]) ? {:checked => true} : nil) %> <%= rule[:discipline] %> </li>
  <% end %>
</ul>

<ul class="form">
<li><label class="form_section">Fight Record</label></li>
<li>
<table style="margin-left:0px;margin-right:auto;">
  <tr>
    <td style="margin-bottom:0px;">Wins</td>
    <td style="margin-bottom:0px;">Losses</td>
    <td style="margin-bottom:0px;">Draws</td>
    <td style="margin-bottom:0px;">KOs</td>
  </tr>
  
  <tr>
    <td style="margin-bottom:0px;"><%= text_field_tag "fighter[wins]", 0, :size => 3 %></td>
    <td style="margin-bottom:0px;"><%= text_field_tag "fighter[losses]", 0, :size => 3 %></td>
    <td style="margin-bottom:0px;"><%= text_field_tag "fighter[draws]", 0, :size => 3 %></td>
    <td style="margin-bottom:0px;"><%= text_field_tag "fighter[kos]", 0, :size => 3 %></td>
  </tr>
</table>
</li>
</ul>

  
<ul class="form">
  <li>  <label class="form_section">About this fighter:</label>  </li>
  <li>    <%= g.text_area :about, :rows => 5, :cols => 40%>  </li>
  <li>    <em>You may wish to add a small biography / interests &amp; hobbies / details about previous opponents / any titles held / etc...</em>  </li>
 </ul>
 
  <ul class="form">    
    <li> <label  class="form_section">STATUS *  </label></li>
    <li>  <%= select_tag "fighter[status]"," 
    <option value=\"ACTIVE\">Currently ACTIVE</option>
    <option value=\"INACTIVE\">Currently INACTIVE</option>"
  %>  </li>
  </ul>
  
  
  <ul class="form"><li>* indicates a mandatory field</li></ul>
  
  <ul class="form">
    <li><label class="form_section">Fighter Profile Pic</label></li>
    <li>    <%= g.file_field :photo %></li>
  </ul>
  
  <ul class="form">
  <li>    <%= submit_tag "Update Details" %>  </li>
  </ul>
  </fieldset>
<% end %>





















